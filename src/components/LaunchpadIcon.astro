---
const {
  icon: { path, text },
} = Astro.props;
---

<div class="col justify-center align-center">
  {
    path && (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="var(--on-surface)"
        stroke-width="2"
      >
        <path d={path} vector-effect="non-scaling-stroke" />
      </svg>
    )
  }

  {text && <span>{text}</span>}
</div>

<style>
  div {
    width: 100%;
    height: 100%;
  }
  svg {
    width: 50%;
    aspect-ratio: 1/1;
  }
  span {
    font-size: var(--unit-s);
  }
</style>
