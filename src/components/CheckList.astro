---
import AnimatedCheckItem from "./AnimatedCheckItem";

interface Props {
  list: {
    title: string;
    description: string;
  }[];
}
const { list } = Astro.props;
---

<ul>
  {
    list.map((item) => (
      <AnimatedCheckItem
        client:idle
        title={item.title}
        description={item.description}
      />
    ))
  }
</ul>

<style>
  ul {
    position: relative;
    display: grid;
    border-radius: 40px;
    background-color: var(--surface-lo);
    gap: 48px;
    padding: 64px;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    ul {
      padding: 32px;
      gap: 32px;
    }
  }
</style>
