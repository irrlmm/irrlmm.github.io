---
import moment from "moment";

interface Props {
  slug: string;
  title: string;
  description: string;
  date: Date;
}

const { slug, title, description, date } = Astro.props;
---

<li>
  <a href={`/work/${slug}`} class="row gap-m">
    <div class="flex-1 col gap-2xs">
      <h3 class="font-size-s">{title}</h3>
      <p class="font-size-xs color-secondary">{description}</p>
    </div>

    <span class="font-size-s">{moment(date).format("YYYY")}</span>
  </a>
</li>

<style>
  li {
    animation: appear 0.33s var(--bezier) both 0.2s;
  }
  li:nth-child(2) {
    animation-delay: 0.25s;
  }
  li:nth-child(2) {
    animation-delay: 0.3s;
  }
  li:nth-child(3) {
    animation-delay: 0.35s;
  }
  li:nth-child(4) {
    animation-delay: 0.4s;
  }
  li:nth-child(5) {
    animation-delay: 0.45s;
  }
  li:nth-child(6) {
    animation-delay: 0.5s;
  }
  a {
    text-decoration: none;
    color: inherit;
    transition: transform 0.1s var(--bezier);
  }
  a:hover {
    transform: translateX(var(--unit-2xs));
  }
</style>
