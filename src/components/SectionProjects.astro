---
import Project from "./Project.astro";

interface Props {
  projects: {
    title: string;
    timeline?: string;
    role?: string;
    lines: string[];
    imgs: { src: ImageMetadata; chip?: string; logo?: ImageMetadata }[];
    link?: UI.Link;
  }[];
}

const { projects } = Astro.props;
---

<section>
  <h2 class="hidden">Work</h2>

  <div class="col gap-2xl">
    {
      projects.map((p) => (
        <Project
          title={p.title}
          timeline={p.timeline}
          lines={p.lines}
          imgs={p.imgs}
          link={p.link}
        />
      ))
    }
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }
</style>
