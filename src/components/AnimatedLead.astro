---
interface Props {
  lines: string[];
  addSpaceBetween?: boolean;
}

const { lines, addSpaceBetween } = Astro.props;
---

<p class="body-m color-secondary">
  {
    lines.map((line, i) => (
      <span>
        {line}
        {lines.length - 1 !== i && (
          <>
            <br />
            {addSpaceBetween && <br />}
          </>
        )}
      </span>
    ))
  }
</p>

<style>
  p > span {
    animation: appear 0.66s var(--bezier) both;
  }
  p > span:nth-child(1) {
    animation-delay: 0.2s;
  }
  p > span:nth-child(2) {
    animation-delay: 0.215s;
  }
  p > span:nth-child(3) {
    animation-delay: 0.23s;
  }
  p > span:nth-child(4) {
    animation-delay: 0.245s;
  }
  p > span:nth-child(5) {
    animation-delay: 0.26s;
  }
  p > span:nth-child(6) {
    animation-delay: 0.275s;
  }
  p > span:nth-child(n + 7) {
    animation-delay: 0.29s;
  }
</style>
