---
import { Image } from "astro:assets";
import getImage from "../helpers/getImage";

interface Props {
  image: string;
}

const { image } = Astro.props;

const img = getImage(image);
---

<div>
  <Image
    src={img()}
    loading="lazy"
    alt=""
    widths={[512, 1024]}
    layout="full-width"
  />
</div>

<style>
  div {
    padding: var(--unit-2xs);
    width: 100%;
    height: 100%;
  }

  img {
    align-self: center;
    border-radius: calc(var(--unit-m) - var(--unit-2xs));
  }
</style>
