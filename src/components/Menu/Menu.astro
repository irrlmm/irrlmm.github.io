---
import MenuItemLink from "./MenuItem.astro";
import type { MenuItem } from "../../consts/ui/menu";

interface Props {
  options: MenuItem[];
  isList?: boolean;
}

const { options, isList } = Astro.props;
---

<ul class:list={["grid-2 gap-8", isList && "list"]}>
  {
    options.map((option) => (
      <MenuItemLink
        {...option}
        isList={isList}
        isSpecial={option.href === "/contact"}
      />
    ))
  }
</ul>

<style>
  ul.list {
    display: flex;
    flex-direction: column;
  }
</style>
