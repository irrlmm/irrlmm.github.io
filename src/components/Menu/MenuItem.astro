---
import Svg from "../Svg.astro";
import type { MenuItem } from "../../consts/ui/menu";

interface Props extends MenuItem {
  isList?: boolean;
  isSpecial?: boolean;
}

const { href, title, description, icon, isList, isSpecial } = Astro.props;
---

<li>
  <a
    href={href}
    class:list={[isSpecial && "special", isList && "list"]}
    aria-label={title}
  >
    <div class="icon-wrapper">
      <Svg d={icon} />
    </div>

    <div class="col gap-4">
      <h3>{title}</h3>
      <span class="body-s color-secondary">{description}</span>
    </div>
  </a>
</li>

<style>
  li {
    position: relative;
    transform-origin: top left;
    animation: appear-with-scale 0.6s var(--bezier) both;
  }
  li:nth-child(1) {
    animation-delay: 0.3s;
  }
  li:nth-child(2) {
    animation-delay: 0.35s;
  }
  li:nth-child(3) {
    animation-delay: 0.4s;
  }
  li:nth-child(4) {
    animation-delay: 0.45s;
  }

  a {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    aspect-ratio: 1/1;
    border-radius: 25%;
    padding: 14.285%;
    color: var(--on-surface);
    background-color: var(--surface-hi);
    transition: opacity 0.2s var(--bezier);
  }
  a::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    background-color: var(--on-surface);
    transition: inherit;
    border-radius: inherit;
  }

  a.special {
    background-color: var(--accent);
  }
  a.special h3 {
    color: var(--inverse-on-surface);
  }
  a.special span {
    color: var(--inverse-on-surface-var);
  }
  a.list {
    flex-direction: row;
    width: 100%;
    height: 128px;
    align-items: center;
    border-radius: 64px;
    gap: 8px;
    padding: 32px;
  }
  a.list .col {
    flex: 1;
  }

  a:hover::before {
    opacity: 0.03;
  }
  a.special:hover::before {
    background-color: var(--inverse-on-surface);
  }

  a.special .icon-wrapper {
    background-color: var(--accent-container);
  }

  .icon-wrapper {
    width: 64px;
    height: 64px;
    align-self: flex-end;
    display: flex;
    align-items: center;
    justify-content: center;
    aspect-ratio: 1/1;
    border-radius: 50%;
    background-color: var(--background);
    transition: background-color 0.2s var(--bezier);
  }
  .icon-wrapper svg {
    color: var(--on-accent);
  }

  a.list .icon-wrapper {
    order: 1;
    width: 64px;
    height: 64px;
    align-self: initial;
  }
  a:hover > .icon-wrapper > svg {
    transform: translate(4px, -4px);
  }

  @media (max-width: 512px) {
    .icon-wrapper {
      background-color: transparent;
      width: initial;
      height: initial;
    }

    .icon-wrapper svg {
      width: 20px;
      height: 20px;
    }
  }
</style>
