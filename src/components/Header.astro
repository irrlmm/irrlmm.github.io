---
import {
  MENU_ABOUT,
  MENU_CONTACT,
  MENU_CV,
  MENU_WORK,
} from "../consts/ui/menu";
import AccentSwitch from "./AccentSwitch.astro";
import FontSwitch from "./FontSwitch.astro";
import HeaderLink from "./HeaderLink.astro";
import ThemeSwitch from "./ThemeSwitch.astro";

const menu = [MENU_ABOUT, MENU_WORK, MENU_CV, MENU_CONTACT];
---

<header>
  <a class="row align-center" href="/" aria-label="Home">
    <svg
      width="18"
      height="9"
      viewBox="0 0 18 9"
      fill="var(--on-surface)"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M0 2V0H2V2H0ZM3 0H6V2H5V4H3V0ZM7 9V0H9V9H7ZM10 0H18V4H16V2H15V4H13V2H12V4H10V0ZM0 9V3H2V6V9H0ZM3 5H6V7H5V9H3V5ZM10 5H18V9H16V7H15V9H13V7H12V9H10V5Z"
      ></path>
    </svg>
  </a>

  <nav>
    <ul>
      {menu.map((link) => <HeaderLink href={link.href} label={link.label} />)}
    </ul>
  </nav>

  <div class="tools">
    <!-- <AccentSwitch /> -->

    <FontSwitch />

    <ThemeSwitch />
  </div>
</header>

<style>
  header {
    height: 88px;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    background-color: var(--background-fx);
    backdrop-filter: blur(16px);
    transition: all 0.2s var(--bezier);
  }

  header > button {
    width: 40px;
    height: 40px;
  }

  a,
  .tools {
    position: absolute;
  }
  a {
    left: 32px;
  }
  a svg {
    width: 44px;
    height: 22px;
  }

  .tools {
    right: 32px;
    display: flex;
    gap: 8px;
  }

  ul {
    display: flex;
    gap: 64px;
  }

  ul {
    justify-content: space-between;
  }

  @media (max-width: 768px) {
    nav {
      display: none;
    }
  }
</style>
