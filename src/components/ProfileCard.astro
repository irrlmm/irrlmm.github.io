---
import { Image } from "astro:assets";

interface Props {
  title: string;
  subtitle: string;
  image: ImageMetadata;
}

const { title, subtitle, image } = Astro.props;
---

<div class="row gap-32 align-center">
  <Image
    class="avatar"
    src={image}
    width={128}
    widths={[128, 256]}
    layout="responsive"
    alt="Igor Lemeshkin"
    loading="eager"
  />

  <div class="col gap-4">
    <h1>{title}</h1>
    <span class="body-l color-secondary">{subtitle}</span>
  </div>
</div>

<style>
  img {
    border-radius: 25%;
    animation: appear-with-blur 0.33s var(--bezier) both;
    animation-delay: 0.15s;
  }

  .col > h1,
  .col > span {
    animation: appear 0.33s var(--bezier) both;
  }
  .col > h1 {
    animation-delay: 0.2s;
  }
  .col > span {
    animation-delay: 0.225s;
  }

  @media (max-width: 512px) {
    .row {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
