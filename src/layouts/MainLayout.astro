---
import BaseHead from "../components/BaseHead.astro";
import type { WithContext, Person, Article, CreativeWork } from "schema-dts";

interface Props {
  schema?: WithContext<Person | Article | CreativeWork>;
}

const { schema } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title="Title" description="Description" />
    {
      schema && (
        <script type="application/ld+json" set:html={JSON.stringify(schema)} />
      )
    }
  </head>

  <body>
    <main>
      <slot />
    </main>

    <div id="overlay"></div>
  </body>
</html>

<style>
  body {
    position: relative;
  }

  main {
    display: flex;
    width: 100%;
    align-items: center;
    flex-direction: column;
    gap: 64px;
    animation: page-appear 1.1s var(--bezier) both;
    animation-delay: 0.1s;
  }

  #overlay {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    pointer-events: none;
    background: linear-gradient(
        to right,
        rgba(0, 0, 0, 0),
        rgba(0, 0, 0, 0) 50%,
        var(--pixel-grid-line) 50%
      ),
      linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0),
        rgba(0, 0, 0, 0) 50%,
        var(--pixel-grid-line) 50%
      );
    background-size: 4px 4px;
    animation: decor-appear 1.2s var(--bezier) both;
  }

  @media (max-width: 512px) {
    main {
      /* padding: 0 var(--unit-m); */
    }
  }

  @media (max-width: 360px) {
    main {
      /* padding: 0 var(--unit-s); */
    }
  }
</style>
